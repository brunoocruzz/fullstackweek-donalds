generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// model

model Restaurant {
  id             String         @id @default(uuid())
  name           String
  slug           String
  description    String
  avatarImageUrl String
  coverImageUrl  String
  menuCategories MenuCategory[] //reference menuCategory
  products       Product[] //reference product
  orders         Order[] //reference order
  createAt       DateTime       @default(now())
  updateAt       DateTime       @updatedAt
}

model MenuCategory {
  id           String     @id @default(uuid())
  name         String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id]) //reference restaurant
  restaurantId String
  product      Product[] //reference product
  createAt     DateTime   @default(now())
  updateAt     DateTime   @updatedAt
}

model Product {
  id             String         @id @default(uuid())
  name           String
  description    String
  price          Float
  imageUrl       String
  ingredients    String[]
  orderProducts  OrderProduct[] //reference order
  restaurant     Restaurant     @relation(fields: [restaurantId], references: [id]) //reference restaurant
  restaurantId   String
  menuCategory   MenuCategory   @relation(fields: [menuCategoryId], references: [id]) //reference menuCategory
  menuCategoryId String
  createAt       DateTime       @default(now())
  updateAt       DateTime       @updatedAt
}

model Order {
  id                Int               @id @default(autoincrement())
  total             Float
  status            OrderStatus
  consumptionMethod ConsumptionMethod
  restaurant        Restaurant        @relation(fields: [restaurantId], references: [id]) //reference restaurant
  restaurantId      String
  orderProducts     OrderProduct[] //reference orderProduct
  createAt          DateTime          @default(now())
  updateAt          DateTime          @updatedAt
}

model OrderProduct {
  id        String   @id @default(uuid())
  product   Product  @relation(fields: [productId], references: [id]) //reference product
  productId String
  order     Order    @relation(fields: [orderId], references: [id]) //reference Order
  orderId   Int
  quantity  Int
  Price     Float
  createAt  DateTime @default(now())
  updateAt  DateTime @updatedAt
}

enum OrderStatus {
  PENDING
  IN_PREPARATION
  fINISHED
}

enum ConsumptionMethod {
  TAKEAWAY
  DINE_IN
}
